<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <keep_state_fragment
        android:id="@+id/navigation_home"
        android:name="com.larin_anton.rebbit.ui.home.HomeFragment"
        android:label="@string/bottom_bar.title_main"
        tools:layout="@layout/fragment_home" />

    <keep_state_fragment
        android:id="@+id/navigation_books"
        android:name="com.larin_anton.rebbit.ui.bookmark.BookmarkFragment"
        android:label="@string/bottom_bar.title_books"
        tools:layout="@layout/fragment_dashboard" />

    <keep_state_fragment
        android:id="@+id/navigation_notifications"
        android:name="com.larin_anton.rebbit.ui.notifications.NotificationsFragment"
        android:label="@string/bottom_bar.title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <keep_state_fragment
        android:id="@+id/navigation_profile"
        android:name="com.larin_anton.rebbit.ui.profile.ProfileFragment"
        android:label="@string/bottom_bar.title_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>